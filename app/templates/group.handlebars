<div class="well">
  <h1>{{ controller.name }}</h1>

  <ul class="nav nav-pills">
    {{#if controller.website}}
      <li><a {{bind-attr href="controller.website"}} class="website">Website</a></li>
    {{/if}}

    {{#if controller.twitter_handle}}
      <li><a {{bind-attr href="controller.twitter_url"}} class="twitter">Twitter</a></li>
    {{/if}}

    {{#if controller.google_group}}
      <li><a {{bind-attr href="controller.google_group_url"}} class="google-group">Google Group</a></li>
    {{/if}}

    {{#if controller.facebook}}
      <li><a {{bind-attr href="controller.facebook"}} class="facebook">Facebook</a></li>
    {{/if}}
  </ul>
</div>

<div class="row">
  <div class="col-md-6">
    <h2>Recent Tweets</h2>
    <table class="tweets table table-hover">
      {{#each tweet in controller.tweets }}
      <tr>
        <td>{{ tweet.content }}</td>
      </tr>
      {{/each}}
    </table>
  </div>
  <div class="col-md-6">
    <h2>Recent Posts</h2>
    <table class="table table-hover posts">
      {{#each post in controller.posts }}
      <tr>
        <td>{{ post.title }}</td>
      </tr>
      {{/each}}
    </table>
  </div>
</div>

